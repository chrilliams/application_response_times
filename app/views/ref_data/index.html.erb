





<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ref_data.each do |ref_datum| %>
      <tr>
        <td><%= ref_datum.code %></td>
        <td><%= ref_datum.description %></td>
        <td><%= link_to 'Show', ref_datum %></td>
        <td><%= link_to 'Edit', edit_ref_datum_path(ref_datum) %></td>
        <td><%= link_to 'Destroy', ref_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

